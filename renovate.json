{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "updateTypes": ["minor", "patch"],
      "enabled": true,
      "managers": ["poetry"]
    }
  ],
  "python": {
    "enabled": true
  },
  "poetry": {
    "fileMatch": [
      "^pyproject.toml$",
      "^poetry.lock$"
    ]
  }
}
