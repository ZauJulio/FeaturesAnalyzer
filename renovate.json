{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": true,
      "matchManagers": [
        "poetry"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "poetry": {
    "fileMatch": [
      "^pyproject.toml$",
      "^poetry.lock$"
    ]
  }
}
